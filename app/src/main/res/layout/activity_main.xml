<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:beginlu="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beginlu.ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beginlu.arcseekbar.ArcSeekBar
            android:id="@+id/rounded_seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            beginlu:arc_color="@color/colorAccent"
            beginlu:bar_color="@color/colorPrimaryDark"
            beginlu:bar_size="18dp"
            beginlu:circle_color="@color/colorPrimary"
            beginlu:seek_size="6dp"
            beginlu:text_size="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beginlu.luloader.LuLoader
            android:id="@+id/lu_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            beginlu:color="@color/colorPrimaryDark"
            beginlu:text="é™†" />

        <com.beginlu.lumusicplay.LuMusicPlay
            android:id="@+id/lu_music_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--<com.beginlu.qqlistitem.QQListItem-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="80dp" />-->
    <com.beginlu.lutabtitle.LuTabTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
