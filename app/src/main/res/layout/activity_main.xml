<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:beginlu="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beginlu.ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beginlu.arcseekbar.ArcSeekBar
            android:id="@+id/rounded_seek_bar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            beginlu:arc_color="@color/colorAccent"
            beginlu:bar_color="@color/colorPrimaryDark"
            beginlu:bar_size="18dp"
            beginlu:circle_color="@color/colorPrimary"
            beginlu:seek_size="6dp"
            beginlu:text_size="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beginlu.luloader.LuLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
